<Window x:Name="ExpertSystemMainWindow" x:Class="ExpertSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="782" Width="1600" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="StartConsultationButton" Content="Запустить консультацию" HorizontalAlignment="Left" Margin="740,657,0,0" VerticalAlignment="Top" Height="38" Width="210" RenderTransformOrigin="0.171,0.58"/>
        <Button x:Name="ShowLogicResultButton" Content="Посмотреть пояснение результата" HorizontalAlignment="Left" Margin="740,700,0,0" VerticalAlignment="Top" Height="40" Width="210"/>
        <Label x:Name="DomainsLabel" Content="&#x9;           Домены" Margin="40,44,0,0" Height="31" Width="232" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="VariablesLabel" Content="&#x9;          Значения" HorizontalAlignment="Left" Margin="312,44,0,0" VerticalAlignment="Top" Height="31" Width="232"/>
        <Label x:Name="DomainVariablesLabel" Content="ДОМЕННЫЕ ЗНАЧЕНИЯ" HorizontalAlignment="Left" Height="48" Width="504" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Margin="40,0,0,0"/>
        <ListBox x:Name="DomainsListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="40,80,678,520"/>
        <ListBox x:Name="VariablesListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="312,80,406,520"/>
        <Button x:Name="AddDomainButton" Content="Добавить" HorizontalAlignment="Left" Margin="40,225,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="ChangeDomainButton" Content="Изменить" HorizontalAlignment="Left" Margin="120,225,0,0" VerticalAlignment="Top" Width="72"/>
        <Button x:Name="DeleteDomainButton" Content="Удалить" HorizontalAlignment="Left" Margin="197,225,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="AddVariableButton" Content="Добавить" HorizontalAlignment="Left" Margin="312,225,0,0" VerticalAlignment="Top" Width="77"/>
        <Button x:Name="ChangeVariableButton" Content="Изменить" HorizontalAlignment="Left" Margin="394,225,0,0" VerticalAlignment="Top" Width="72"/>
        <Button x:Name="DeleteVariableButton" Content="Удалить" HorizontalAlignment="Left" Margin="471,225,0,0" VerticalAlignment="Top" Width="73"/>
        <Label x:Name="RulesLabel" Content="ПРАВИЛА" HorizontalAlignment="Left" Height="48" Width="504" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Margin="40,250,0,0"/>
        <ListBox x:Name="RulesListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="40,303,561,202"/>
        <TextBox x:Name="InputNameRuleTextBox" HorizontalAlignment="Left" Margin="394,332,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="38"/>
        <Label x:Name="RuleNameLabel" Content="Название правила:" HorizontalAlignment="Left" Margin="394,303,0,0" VerticalAlignment="Top" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="DescriptionRuleLabel" Content="Пояснение к правилу:" HorizontalAlignment="Left" Margin="394,375,0,0" VerticalAlignment="Top" Height="26" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="InputDescriptionRuleTextBox" HorizontalAlignment="Left" Margin="394,406,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="50"/>
        <Button x:Name="AddRuleButton" Content="Добавить правило" HorizontalAlignment="Left" Margin="394,461,0,0" VerticalAlignment="Top" Height="24" Width="150"/>
        <Label x:Name="IfLabel" Content="ЕСЛИ:" HorizontalAlignment="Left" Margin="40,543,0,0" VerticalAlignment="Top" Height="34" Width="232"/>
        <Label x:Name="ElseLabel" Content="TO:" HorizontalAlignment="Left" Margin="312,543,0,0" VerticalAlignment="Top" Height="34" Width="232"/>
        <ListBox x:Name="CausesListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="40,582,678,38"/>
        <ListBox x:Name="ConsequenceListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="312,582,406,38"/>
        <Button x:Name="AddCousesFactButton" Content="Добавить" HorizontalAlignment="Left" Margin="40,707,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="ChangeCousesFactButton" Content="Изменить" HorizontalAlignment="Left" Margin="121,707,0,0" VerticalAlignment="Top" Width="71"/>
        <Button x:Name="DeleteCousesFactButton" Content="Удалить" HorizontalAlignment="Left" Margin="197,707,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="InstallConsequenceRuleButton" Content="Установить" HorizontalAlignment="Left" Margin="312,707,0,0" VerticalAlignment="Top" Width="116"/>
        <Button x:Name="DeleteConsequenceRuleButton" Content="Удалить" HorizontalAlignment="Left" Margin="435,707,0,0" VerticalAlignment="Top" Width="109"/>
        <Button x:Name="ChangeRuleButton" Content="Изменить правило" HorizontalAlignment="Left" Margin="394,490,0,0" VerticalAlignment="Top" Height="20" Width="150"/>
        <Button x:Name="DeleteRuleButton" Content="Удалить правило" HorizontalAlignment="Left" Margin="394,515,0,0" VerticalAlignment="Top" Width="150" Height="23"/>
    </Grid>
</Window>
