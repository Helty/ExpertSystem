        <Label x:Name="IfLabel" Content="ЕСЛИ:" Margin="40,543,17,0" VerticalAlignment="Top" Height="34" FontWeight="Bold"/>
        <Label x:Name="ElseLabel" Content="TO:" Margin="52,543,390,0" VerticalAlignment="Top" Height="34" FontWeight="Bold" Grid.Column="1"/>
        <ListBox x:Name="CausesListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="40,582,633,40" Grid.ColumnSpan="2"/>
        <ListBox x:Name="ConsequenceListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="52,582,361,40" Grid.Column="1"/>
