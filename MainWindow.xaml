        <Label x:Name="ValueLabel" Content="Значения:" HorizontalAlignment="Left" Margin="32,132,0,0" VerticalAlignment="Top" Width="78" Height="30" Grid.Column="1"/>
        <ComboBox x:Name="ValueComboBox" Margin="115,132,382,581" Grid.Column="1"/>
        <Button x:Name="AddNewValueButton" Content="+" HorizontalAlignment="Left" Margin="268,132,0,0" VerticalAlignment="Top" Height="22" Width="16" RenderTransformOrigin="0.5,0.5" Click="AddNewValueButton_Click" Grid.Column="1"/>
        <Label x:Name="TypeLabel" Content="Тип:" HorizontalAlignment="Left" Margin="31,156,0,0" VerticalAlignment="Top" Width="78" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1"/>
        <ComboBox x:Name="TypeComboBox" Margin="115,160,361,553" SelectionChanged="TypeComboBox_SelectionChanged" Grid.Column="1"/>
        <Label x:Name="VariableQuestionLabel" Content="Вопрос:" HorizontalAlignment="Left" Margin="32,191,0,0" VerticalAlignment="Top" Width="78" Height="28" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1"/>
        <TextBox x:Name="InputVariableQuestionTextBox" HorizontalAlignment="Left" Margin="115,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Height="30" Grid.Column="1"/>
        <TextBox x:Name="VariableNameTextBox" HorizontalAlignment="Left" Margin="115,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Height="20" Grid.Column="1"/>
        <Label x:Name="VariableNameLabel" Content="Имя:" Margin="32,74,0,635" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="77" Grid.Column="1"/>
