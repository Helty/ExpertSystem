        <Button x:Name="DeleteConsequenceRuleButton_Copy" Content="Удалить" Margin="175,0,361,8" VerticalAlignment="Bottom" Click="DeleteConsequenceRuleButton_Copy_Click" Grid.Column="1"/>
        <Button x:Name="AnswerButton" Content="Ответить" Margin="620,595,-28,40" Click="AnswerButton_Click" Grid.Column="1"/>
    </Grid>
</Window>
